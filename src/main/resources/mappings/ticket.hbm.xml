<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="booking.domain">

    <class name="Ticket" table="TICKET">
        <id name="id" column="ID">
            <generator class="identity"/>
        </id>
        <many-to-one name="event" class="booking.domain.Event" column="EVENT" fetch="join" lazy="false"/>
        <property name="dateTime" type="java.time.LocalDateTime" column="DATE_TIME"/>
        <property name="seats" column="SEATS" type="string"/>
        <property name="price" column="PRICE" type="double"/>
    </class>

</hibernate-mapping>