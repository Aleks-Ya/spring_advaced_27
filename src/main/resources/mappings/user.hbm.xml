<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="booking.domain">

    <class name="User" table="USER">
        <id name="id" column="ID">
            <generator class="identity"/>
        </id>
        <property name="email" type="string" column="EMAIL" unique="true"/>
        <property name="name" type="string" column="NAME"/>
        <property name="birthday" type="java.time.LocalDate" column="BIRTHDAY"/>
        <property name="password" type="string" column="PASSWORD"/>
        <property name="roles" type="string" column="ROLES"/>
    </class>

</hibernate-mapping>